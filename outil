                <button class="type-btn active" id="btnProduction" onclick="selectType('production')">
                    Prototype + Production
                </button>
            </div>
            
            <div class="form-grid">
                <div class="form-group">
                    <label>Nom du projet</label>
                    <input type="text" id="nomProjet" placeholder="Assiettes Restaurant X">
                </div>
                
                <div class="form-group">
                    <label>Co√ªt standard pi√®ce (‚Ç¨)</label>
                    <input type="number" id="coutStandard" value="50" step="0.01" oninput="calculate()">
                </div>
            </div>
            
            <h3 style="margin: 30px 0 15px 0; color: #B42150; font-size: 18px; border-bottom: 2px solid #C7A0CB; padding-bottom: 10px;">üìê PROTOTYPAGE</h3>
            
            <div class="form-grid">
                <div class="form-group">
                    <label>Nombre d'essais prototypes</label>
                    <input type="number" id="nombreEssais" value="3" step="1" min="1" oninput="calculate()">
                </div>
                
                <div class="form-group">
                    <label>Temps recherche (h)</label>
                    <input type="number" id="tempsRecherche" value="10" step="0.5" oninput="calculate()">
                </div>
                
                <div class="form-group">
                    <label>Temps personnalisation prototype (h)</label>
                    <input type="number" id="tempsPerso" value="5" step="0.5" oninput="calculate()">
                </div>
                
                <div class="form-group">
                    <label>Taux horaire prototype (‚Ç¨/h)</label>
                    <input type="number" id="tauxHoraire" value="40" step="1" oninput="calculate()">
                </div>
            </div>
            
            <h3 style="margin: 30px 0 15px 0; color: #001F54; font-size: 18px; border-bottom: 2px solid #C7A0CB; padding-bottom: 10px;">üè≠ PRODUCTION</h3>
            
            <div class="form-grid">
                <div class="form-group">
                    <label>Temps personnalisation / pi√®ce produite (h)</label>
                    <input type="number" id="tempsPersoParPiece" value="0.5" step="0.1" oninput="calculate()">
                </div>
                
                <div class="form-group">
                    <label>Taux de rebus (%)</label>
                    <input type="number" id="tauxRebus" value="15" step="1" min="0" max="100" oninput="calculate()">
                </div>
                
                <div class="form-group" id="groupQuantite">
                    <label>Quantit√© command√©e</label>
                    <input type="number" id="quantite" value="200" step="1" oninput="calculate()">
                </div>
                
                <div class="form-group" id="groupMarge">
                    <label>Marge cible (%)</label>
                    <input type="number" id="margeCible" value="20" step="1" min="0" max="100" oninput="calculate()">
                </div>
            </div>
            
