    <script>
        let currentType = 'production';
        
        function selectType(type) {
            currentType = type;
            
            const btnPrototype = document.getElementById('btnPrototype');
            const btnProduction = document.getElementById('btnProduction');
            const groupQuantite = document.getElementById('groupQuantite');
            const groupMarge = document.getElementById('groupMarge');
            const resultQteReelle = document.getElementById('resultQteReelle');
            const resultPrixVente = document.getElementById('resultPrixVente');
            
            if (type === 'prototype') {
                btnPrototype.classList.add('active');
                btnProduction.classList.remove('active');
                groupQuantite.classList.add('hidden');
                groupMarge.classList.add('hidden');
                resultQteReelle.classList.add('hidden');
                resultPrixVente.classList.add('hidden');
            } else {
                btnPrototype.classList.remove('active');
                btnProduction.classList.add('active');
                groupQuantite.classList.remove('hidden');
                groupMarge.classList.remove('hidden');
                resultQteReelle.classList.remove('hidden');
                resultPrixVente.classList.remove('hidden');
            }
            
            calculate();
        }
        
        function formatEuro(nombre) {
            return nombre.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, " ").replace('.', ',') + ' ‚Ç¨';
        }
        
        function calculate() {
            const coutStandard = parseFloat(document.getElementById('coutStandard').value) || 0;
            const nombreEssais = parseFloat(document.getElementById('nombreEssais').value) || 1;
            const tempsRecherche = parseFloat(document.getElementById('tempsRecherche').value) || 0;
            const tempsPerso = parseFloat(document.getElementById('tempsPerso').value) || 0;
            const tempsPersoParPiece = parseFloat(document.getElementById('tempsPersoParPiece').value) || 0;
            const tauxHoraire = parseFloat(document.getElementById('tauxHoraire').value) || 0;
            const tauxRebus = parseFloat(document.getElementById('tauxRebus').value) || 0;
            const quantite = parseFloat(document.getElementById('quantite').value) || 0;
            const margeCible = parseFloat(document.getElementById('margeCible').value) || 0;
            
            // Co√ªt prototype = (co√ªt standard √ó nb essais) + temps recherche + temps perso
            const coutPrototype = (coutStandard * nombreEssais) + (tempsRecherche * tauxHoraire) + (tempsPerso * tauxHoraire);
            document.getElementById('resultCoutProto').textContent = formatEuro(coutPrototype);
            
            if (currentType === 'prototype') {
                // Mode Prototype seul
                document.getElementById('resultCoutTotal').textContent = formatEuro(coutPrototype);
                document.getElementById('resultCA').textContent = formatEuro(coutPrototype);
                document.getElementById('resultNet').textContent = '0,00 ‚Ç¨';
                document.getElementById('resultIndicateur').textContent = '‚ö™ PROTOTYPE SEUL';
                document.getElementById('resultIndicateur').className = 'indicator prototype';
            } else {
                // Mode Production
                const qteReelle = Math.ceil(quantite / (1 - tauxRebus / 100));
                document.getElementById('resultQte').textContent = qteReelle + ' pi√®ces';
                
                // Co√ªt d'une pi√®ce personnalis√©e = co√ªt standard + temps perso par pi√®ce
                const coutPiecePersonnalisee = coutStandard + (tempsPersoParPiece * tauxHoraire);
                
                // Co√ªt total = (co√ªt pi√®ce perso √ó qt√© r√©elle) + prototype
                const coutTotalProduction = (coutPiecePersonnalisee * qteReelle) + coutPrototype;
                document.getElementById('resultCoutTotal').textContent = formatEuro(coutTotalProduction);
                
                const prixVenteMin = coutTotalProduction / (quantite * (1 - margeCible / 100));
                document.getElementById('resultPrix').textContent = formatEuro(prixVenteMin);
                
                const ca = prixVenteMin * quantite;
                document.getElementById('resultCA').textContent = formatEuro(ca);
                
                const resultatNet = ca - coutTotalProduction;
                document.getElementById('resultNet').textContent = formatEuro(resultatNet);
                
                // Indicateur
                const indicateur = document.getElementById('resultIndicateur');
                if (resultatNet < 0) {
                    indicateur.textContent = 'üî¥ PERTE';
                    indicateur.className = 'indicator perte';
                } else if (margeCible < 20) {
                    indicateur.textContent = 'üü° MARGE FAIBLE';
                    indicateur.className = 'indicator faible';
                } else {
                    indicateur.textContent = 'üü¢ RENTABLE';
                    indicateur.className = 'indicator rentable';
                }
            }
        }
        
        // Calcul initial
        calculate();
    </script>
